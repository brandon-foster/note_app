<%- include('./inc/begin.ejs') %>
            <div class='row mt-5'>
                <% if (viewName === 'note-detail') { %>
                <p><a href="<%= BASE_DIR %>/notes#<%= note.noteCategoryTextEncoded %>">&lt; <%= note.noteCategoryText %></a></p>
                <% } %>
            </div>
            <div class='row'>
                <div class='col-sm-9 col-12'>
                    <h1><%= pageTitle %></h1>
                    <div>
                        <% if (isLoggedIn === true) { %>
                        <a class="btn btn-outline-secondary" href="<%= BASE_DIR %>/admin/edit-note/<%= note.noteId %>" role="button">edit</a>
                        <% } %>
                        <!-- <div class="badge bg-secondary">put tags here</div> -->
                        <hr>
                        <%- note.noteBody %>
                    </div>
                </div>
                <div class='col-sm-3 d-none d-sm-block'>
                    <div class="sideNavWrapper">
                        <ul id="sideNav" class="nav nav-pills flex-column">
                            <% for (const item of detailNavItems) { %>
                            <li class="nav-item">
                                <a class="nav-link" data-heading="<%= item[0] %>" href='#<%= item[0] %>'><%= item[1] %></a>
                            </li>
                            <% } %>
                        </ul>
                    </div>
<%- include('./inc/end.ejs') %>
