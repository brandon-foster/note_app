<%- include("../inc/begin.ejs") %>
            <div class='row mt-5 mb-5'>
                    <form class="mb-3" action="<%= BASE_DIR %>/admin/edit-note" method="POST">
                        <input type="hidden" name="noteId" value="<%= note.noteId %>">
                        <input type="text" name="noteTitle" id="noteTitle" class="form-control" value="<%= note.noteTitle %>" placeholder="title" autofocus>
                        <select name="noteCategory" id="selectInputCategory" class="form-select" value="<%= note.noteCategory %>" aria-label="select a category">
                            <% for (const cat of categoryList) { %>
                                <% if (parseInt(note.noteCategory) === cat.id) { %>
                                    <option selected value="<%= cat.id %>"><%= cat.text %></option>
                                <% } else { %>
                                    <option value="<%= cat.id %>"><%= cat.text %></option>
                                <% } %>
                            <% } %>
                        </select>
                        <textarea name="noteBody" id="noteBody" class="form-control"><%= note.noteBody %></textarea>
                        <input type="submit" value="go" class="btn btn-primary">
                    </form>
<%- include("../inc/end.ejs") %>
